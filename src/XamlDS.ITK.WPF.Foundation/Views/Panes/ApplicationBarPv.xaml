<UserControl x:Class="XamlDS.ITK.WPF.Views.Panes.ApplicationBarPv"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XamlDS.ITK.WPF.Views.Panes"
             mc:Ignorable="d" d:DesignWidth="800">
    <DockPanel>
        <Border Margin="4" DockPanel.Dock="Bottom" Height="28" CornerRadius="8" Background="#19808080"/>
        <Border Margin="36 4 4 4" DockPanel.Dock="Left" Width="112" Height="56" CornerRadius="8" Background="#33808080"/>
        <ContentControl DockPanel.Dock="Left" Content="{Binding LeftContent}"/>
        <Border Margin="4 4 36 4" DockPanel.Dock="Right" Width="112" Height="56" CornerRadius="8" Background="#33808080"/>
        <ContentControl DockPanel.Dock="Right" Content="{Binding SystemCommands.ExitApplication}"/>
        <ContentControl DockPanel.Dock="Right" Content="{Binding RightContent}"/>
        <ContentControl HorizontalAlignment="Center" Content="{Binding LeftContent}"/>
    </DockPanel>
</UserControl>
