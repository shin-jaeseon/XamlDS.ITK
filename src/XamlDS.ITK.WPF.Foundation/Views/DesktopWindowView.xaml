<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlDS.ITK.WPF.Views"
        xmlns:Layouts="clr-namespace:XamlDS.ITK.WPF.Views.Layouts" x:Class="XamlDS.ITK.WPF.Views.DesktopWindowView"
        xmlns:controls="clr-namespace:XamlDS.ITK.WPF.Controls"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackgroundBrush}" Foreground="{DynamicResource WindowForegroundBrush}"
        Title="{Binding WindowTitle}" Height="900" Width="1600">

    <Border Padding="4">
        <ContentControl Content="{Binding Content}"/>
    </Border>
</Window>
