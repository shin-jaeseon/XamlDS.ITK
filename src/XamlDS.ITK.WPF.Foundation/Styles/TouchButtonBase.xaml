<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:XamlDS.ITK.WPF.Controls" xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:XamlDS.ITK.WPF">

    <Style TargetType="{x:Type controls:TouchButtonBase}">
        <Setter Property="Background" Value="#33FFFFFF"/>
        <Setter Property="BorderBrush" Value="#CCFFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="{DynamicResource FieldBorderThickness}"/>
        <Setter Property="Margin" Value="{DynamicResource FieldMargin}"/>
        <Setter Property="Padding" Value="{DynamicResource FieldPadding}"/>
        <Setter Property="Height" Value="{DynamicResource FieldHeight}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TouchButtonBase}">
                    <Border Padding="{TemplateBinding Padding}" CornerRadius="{DynamicResource FieldCornerRadius}"
                            Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock x:Name="PART_DisplayName" Text="{Binding DisplayName}" FontSize="{DynamicResource FieldFontSize}" LineStackingStrategy="BlockLineHeight" LineHeight="{DynamicResource FieldFontSize}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#66FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_DisplayName" Property="Foreground" Value="Black"/>
                            <Setter Property="Background" Value="#CCFFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="BorderBrush" Value="#4CFFFFFF"/>
                            <Setter Property="Opacity" Value="0.2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
